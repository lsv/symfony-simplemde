{
    "name": "lsv/simplemde-bundle",
    "description": "SimpleMDE - Markdown Editor - Symfony form type",
    "license": "MIT",
    "type": "symfony-bundle",
    "require": {
        "php": ">7.4",
        "ext-json": "*",
        "symfony/form": "^5.1",
        "symfony/config": "^5.1",
        "symfony/dependency-injection": "^5.1",
        "symfony/http-kernel": "^5.1",
        "symfony/twig-bundle": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Lsv\\SimpleMDEBundle\\": "src"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.32",
        "phpunit/phpunit": "^9.2",
        "matthiasnoback/symfony-config-test": "^4.2",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Lsv\\SimpleMDEBundleTest\\": "tests"
        }
    },
    "scripts": {
        "fix": [
            "vendor/bin/php-cs-fixer --allow-risky=yes -q fix",
            "vendor/bin/phpstan analyse -l max src tests",
            "vendor/bin/phpunit"
        ],
        "test": [
            "vendor/bin/php-cs-fixer --allow-risky=yes --dry-run --diff --stop-on-violation fix",
            "vendor/bin/phpstan analyse -l max src tests"
        ]
    }
}
